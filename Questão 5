def BubbleSort(lista):
    for i in range(len(lista)-1,0,-1):  #lê a lista ao contrário
        for j in range(i):  
            a = lista[j]
            b = lista[j+1]
            if a > b:
                lista[j] = b
                lista[j+1] = a
            else:
                pass
                

def MergeSort(lista):
    if len(lista)>1:
        meio = len(lista)//2     
        esquerda = lista[:meio]  #lista do início até o 'meio' (divisão inteira, sem float)
        direita = lista[meio:]   #lista do 'meio' até o final

        MergeSort(direita)   #função recursiva
        MergeSort(esquerda)

        
        i = 0
        j = 0
        k = 0

        while i < len(esquerda) and j < len(direita):
            if esquerda[i] < direita[j]:  # o menor primeiro elemento entre as duas metades
                lista[k] = esquerda[i]    # será o primeiro elemento da nova lista
                i = i+1
            else:
                lista[k] = direita[j]
                j = j+1
            k = k+1

        while i < len(esquerda):
            lista[k] = esquerda[i]
            i= i+1
            k = k+1

        while j < len(direita):
            lista[k] = direita[j]
            j = j+1
            k = k+1


lista = [54,26,93,17,77,31,44,55,20,42]
BubbleSort(lista)
MergeSort(lista)
print(lista)
